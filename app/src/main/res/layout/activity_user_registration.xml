<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pe.com.igor.pichanga.UserRegistrationActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <ImageView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lbl_tus_amigos" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/img_poligono"
        android:src="@drawable/img_usuario"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lbl_ingresa_datos"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/nombreEditText"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/txtbox_gris"
        android:text="Nombres y Apellidos"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/emailEditText"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/txtbox_gris"
        android:text="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/txtbox_gris"
        android:textColor="@color/abc_primary_text_material_dark"
        android:text="ContraseÃ±a"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Registrar"
        android:id="@+id/registrarButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_blanco"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Cancelar"
        android:id="@+id/cancelarButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_verde"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_marginTop="10dp" />

</LinearLayout>
